<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vvVideo">

    <include
        layout="@layout/overlay_box"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:id="@+id/videoBox"/>

    <include
        layout="@layout/overlay_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/videoBox"
        android:layout_alignEnd="@+id/videoBox"
        android:layout_alignLeft="@+id/videoBox"
        android:layout_alignStart="@+id/videoBox"
    />

</RelativeLayout>